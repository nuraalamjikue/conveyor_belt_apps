import type {
  StyleProp,
  TextProps as RNTextProps,
  TextStyle,
} from 'react-native';

export type fontSizeProps =
  | 'sm'
  | 'md'
  | 'lg'
  | 'xl'
  | '2xl'
  | '3xl'
  | '4xl'
  | '5xl'
  | '6xl'
  | number;

export interface TextProps extends RNTextProps {
  children?: React.ReactNode;
  style?: StyleProp<TextStyle>;
  fontSize?: fontSizeProps;
}
